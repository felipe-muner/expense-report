  <body class="nav-md" onload="carregaLang();">
    <div class="container body">
      <div class="main_container">
        <div class="col-md-3 left_col">
          <div class="left_col scroll-view">
            <div class="navbar nav_title" style="border: 0;">
              <a href="/" class="site_title">
                <img src="/images/british_logo.png" alt="..." class="img-circle profile_img" style="width:50px;height:50px;margin-bottom:5px;">
                <span>British School</span>
              </a>
            </div>
            <div class="clearfix"></div>
            <!-- sidebar menu -->
            <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
              <div class="menu_section">
                <h3>Expense Report</h3>
                <ul class="nav side-menu">
                  {{#each sess.functionalityProfile}}
                    <li><a href="{{Action}}"><i class="fa {{Icon}}"></i> {{{i18n Name}}} </a></li>
                  {{/each}}
                </ul>
              </div>
            </div>
            <!-- /sidebar menu -->

            <!-- /menu footer buttons -->
            <div class="sidebar-footer hidden-small">
              <a data-toggle="tooltip" data-placement="top" title="Settings" class="no-loading">

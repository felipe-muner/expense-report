              </a>
            </div>
            <!-- /menu footer buttons -->
          </div>
        </div>

        <!-- top navigation -->
        <div class="top_nav">
          <div class="nav_menu">
            <nav>
              <div class="nav toggle">
                <a class="no-loading" id="menu_toggle"><i class="fa fa-bars"></i></a>
              </div>

              <ul class="nav navbar-nav navbar-right">
                <li class="">
                  <a href="javascript:;" class="user-profile dropdown-toggle no-loading" data-toggle="dropdown" aria-expanded="false">
                    {{toTitleCase sess.nomeusuario}}
                    <span class=" fa fa-angle-down"></span>
                  </a>
                  <ul class="dropdown-menu dropdown-usermenu pull-right">
                    <li><a href="javascript:;" class="no-loading"> Profile</a></li>
                    <li>
                      <a href="javascript:;" class="no-loading">
                        <span class="badge bg-red pull-right">50%</span>
                        <span>Settings</span>
                      </a>
                    </li>
                    <li><a href="javascript:;" class="no-loading">Help</a></li>
                    <li><a href="/logout"><i class="fa fa-sign-out pull-right"></i> Log Out</a></li>
                  </ul>
                </li>

                <li role="presentation" class="dropdown">
                  <a id="linkport" href="/panel" class="dropdown-toggle info-number no-loading">
                    <img src="/images/iconBR.png" width="30" height="30">
                  </a>
                </li>
                <li role="presentation" class="dropdown">
                  <a id="linkenglish" href="/panel" class="dropdown-toggle info-number no-loading">
                    <img src="/images/iconUK.png" width="30" height="30">
                  </a>
                </li>
                <li role="presentation" class="dropdown">
                  <a href="javascript:;" class="dropdown-toggle info-number no-loading" data-toggle="dropdown" aria-expanded="false">
                    <i class="fa fa-envelope-o"></i>
                    <span class="badge bg-green">6</span>
                  </a>
                  <ul id="menu1" class="dropdown-menu list-unstyled msg_list" role="menu">
                    <!-- <li>
                      <a>
                        <span class="image"><img src="/images/british_logo.png" alt="Profile Image" /></span>
                        <span>

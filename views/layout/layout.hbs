                          <span class="time">3 mins ago</span>
                        </span>
                        <span class="message">
                          Film festivals used to be do-or-die moments for movie makers. They were where...
                        </span>
                      </a>
                    </li> -->
                    <li>
                      <div class="text-center">
                        <a class="no-loading">
                          <strong>See All Alerts</strong>
                          <i class="fa fa-angle-right"></i>
                        </a>
                      </div>
                    </li>
                  </ul>


                </li>
              </ul>
            </nav>
          </div>
        </div>
        <!-- /top navigation -->

        <!-- page content -->
        <div class="right_col" role="main">
          <div class="clearfix"></div>
          {{{body}}}
          <div class="clearfix"></div>
        </div>
        <!-- /page content -->

        <!-- footer content -->
        <footer>
          <div class="pull-right">
            British School - ICT Administrative
          </div>
          <div class="clearfix"></div>
        </footer>
        <!-- /footer content -->
      </div>
    </div>

    <div id="relogio" style="display:none;">
      <div style="color: #a0cadb;position:fixed;top: 40%;left: 45%;" class="la-timer la-3x">
          <div></div>
      </div>
    </div>

    <script src="/vendor/jquery/dist/jquery.min.js"></script>
    <script src="/vendor/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="/vendor/select2/dist/js/select2.js"></script>
    <script src="/vendor/moment/min/moment.min.js"></script>
    <script src="/vendor/fullcalendar/dist/fullcalendar.js"></script>
    <script src="/vendor/data-tables/js/jquery.dataTables.min.js"></script>
    <script src="/vendor/data-tables/js/dataTables.bootstrap.min.js"></script>
    <script src="/vendor/sweetalert/sweetalert2.js"></script>
    <script src="/vendor/handlebars/handlebars-v4.0.10.js"></script>

    <script src="/vendor/build/js/custom.js"></script>
    <script src="/javascripts/muner.js"></script>

    <script type="text/javascript">

      function carregaLang(){
        document.getElementById("linkenglish").href = '/set-locale/en?redirectUrl=' + location.pathname
        document.getElementById("linkport").href = '/set-locale/pt-BR?redirectUrl=' + location.pathname
      }

      $('a:not(.no-loading)').click(function(){
        $('#relogio').addClass('in loadingscreen');
        $('#relogio').css('display','block');
      })

      $( document ).ajaxStart(function() {
          $('#relogio').addClass('in loadingscreen');
          $('#relogio').css('display','block');
          // alert('indo')
      })
      $(document).ajaxComplete(function() {
          $('#relogio').removeClass('in loadingscreen');
          $('#relogio').css('display','none');
          // alert('voltei')
      })
    </script>

    {{{_sections.script}}}

